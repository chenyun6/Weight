<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.infrastructure.weight.repository.mapper.UserTokenMapper">

    <select id="selectByUserId" resultType="com.cy.infrastructure.weight.repository.model.UserTokenDO">
        SELECT * FROM user_token WHERE user_id = #{userId}
    </select>

    <select id="selectByAccessToken" resultType="com.cy.infrastructure.weight.repository.model.UserTokenDO">
        SELECT * FROM user_token WHERE access_token = #{accessToken}
    </select>

    <select id="selectByRefreshToken" resultType="com.cy.infrastructure.weight.repository.model.UserTokenDO">
        SELECT * FROM user_token WHERE refresh_token = #{refreshToken}
    </select>

    <update id="updateLastUsedTime">
        UPDATE user_token
        SET last_used_time = #{lastUsedTime}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUnusedTokens">
        DELETE FROM user_token
        WHERE last_used_time &lt; DATE_SUB(NOW(), INTERVAL #{days} DAY)
    </delete>

</mapper>
